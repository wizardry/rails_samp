<% @page_title = "news show" %>
<h1><%= @page_title %></h1>
<p><%= link_to "edit", [:edit, :admin, @article] %></p>
<table class="list">
  <tr>
    <th>title</th>
    <td><%= @article.title %></td>
  </tr>
  <tr>
    <th>body</th>
    <td><%= simple_format(@article.body) %></td>
  </tr>
  <tr>
    <th>released_at</th>
    <td><%= @article.released_at.strftime("%Y/%m/%d %H:%M") %></td>
  </tr>
  <tr>
    <th>expired_at</th>
    <td><%= @article.expired_at.try(:strftime, "%Y/%m/%d %H:%M") %></td>
  </tr>
  <tr>
    <th>limit</th>
    <td><%= @article.member_only? ? "true" : "false" %></td>
  </tr>
</table>
